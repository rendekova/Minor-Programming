<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Mondriaan Website</title>
		<style>
			#container {
				display: grid;
				grid-template-columns: 1fr 1fr 1fr 2fr 1fr 1fr 0.5fr;
				grid-template-rows: 1fr 2.5fr 2.5fr 1fr 1fr 0.5fr 0.5fr;
				gap: 5px;
				background-color: black;
				width: 100vw;
				height: 100vh;
			}
			
			.grid-item {
				background-color: white;
			}			
			
			/* row 1*/
			#item-a {
				grid-column: 1 / span 2;
				grid-row: 1;
			}
			
			#item-b {
				grid-column: 3 / span 2;
				grid-row: 1;
			}			
			
			#item-c {
				grid-column: 5 / span 2;
				grid-row: 1;
				background-color: yellow;
			}

			#item-d {
				grid-column: 7 / span 1;
				grid-row: 1 / span 4;
			}			
			
			/* row 2*/
			#item-e {
				grid-column: 1;
				grid-row: 2;
			}
				
			#item-f {
				grid-column: 2 / span 3;
				grid-row: 2 / span 2;
				background-color: red;
			}
			
			#item-g {
				grid-column: 5 / span 2;
				background-color: yellow;
			}
			
			/* row 3*/
			#item-h {
				grid-column: 1;
				grid-row: 3 /span 2;
			}
			
			#item-i {
				grid-column: 5;
				grid-row: 3;
			}	

			#item-j {
				grid-column: 6;
				grid-row: 3;
			}	

			/* row 4*/
			#item-k {
				grid-column: 2 / span 2;
				grid-row: 4 /span 2;
				background-color: black;
			}
			
			#item-l {
				grid-column: 4;
				grid-row: 4;
			}		
			
			#item-m {
				grid-column: 5 / span 2;
				grid-row: 4;
			}				

			/* row 5*/
			#item-n {
				grid-column: 1;
				grid-row: 5 / span 3;
				background-color: yellow;
			}		

			#item-o {
				grid-column: 4;
				grid-row: 5;
			}	

			#item-p {
				grid-column: 5 / span 2;
				grid-row: 5 / span 2;
				background-color: blue;
			}				
		
			#item-q {
				grid-column: 7;
				grid-row: 5 / span 3;
				background-color: red;
			}		
			
			/* row 6*/
			#item-r {
				grid-column: 2 / span 2;
				grid-row: 6 / span 2;
			}	
			
			#item-s {
				grid-column: 4;
				grid-row: 6;
				background-color: black;
			}		
			
			
			/* row 7*/
			#item-t {
				grid-column: 4 / span 3;
				grid-row: 7;
			}	
			
		</style>
	</head>
	<body>
		<div id="container">
		
			<!-- column -->
			<div id="item-a" class="grid-item"></div>
			<div id="item-b" class="grid-item"></div>
			<div id="item-c" class="grid-item"></div>
			<div id="item-d" class="grid-item"></div>
			
			<!-- column 2 -->
			<div id="item-e" class="grid-item"></div>
			<div id="item-f" class="grid-item"></div>
			<div id="item-g" class="grid-item"></div>	
			
			<!-- column 3 -->
			<div id="item-h" class="grid-item"></div>
			<div id="item-i" class="grid-item"></div>	
			<div id="item-j" class="grid-item"></div>			

			<!-- column 4 -->
			<div id="item-k" class="grid-item"></div>
			<div id="item-l" class="grid-item"></div>	
			<div id="item-m" class="grid-item"></div>			
		
			<!-- column 5 -->
			<div id="item-n" class="grid-item"></div>
			<div id="item-o" class="grid-item"></div>	
			<div id="item-p" class="grid-item"></div>			
			<div id="item-q" class="grid-item"></div>				
		
			<!-- column 6 -->
			<div id="item-r" class="grid-item"></div>
			<div id="item-s" class="grid-item"></div>	
			
			<!-- column 7 -->
			<div id="item-t" class="grid-item"></div>	
			
		</div>
	</body>
</html>
